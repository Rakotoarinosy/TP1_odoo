<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_category_price_variation_form" model="ir.ui.view">
        <field name="name">product.category.form.variation</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <field name="discount_percentage"/>
                    <field name="interval_start"/>
                    <field name="interval_end"/>
                    <field name="specific_days" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
</record>    

</odoo>
