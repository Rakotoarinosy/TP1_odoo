<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_variation_view_form" model="ir.ui.view">
        <field name="name">product.variation.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
       <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <group>
                    <field name="variation_price"/>
                    <field name="interval_start"/>
                    <field name="interval_end"/>
                    <field name="specific_days" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
